<?xml version="1.0" encoding="utf-8"?>
<config>
    <dots>
        <variable option="global">
        </variable>
        <variable option="admin">
            <pageTitle>
                <action>
                    <upload>Upload</upload>
                    <list>List all songs</list>
                    <show>Show song details</show>
                </action>
            </pageTitle>
            <infoMessage>
                <songAdd>Song added ! </songAdd>
                <songUpdate>Song updated ! </songUpdate>
                <songDelete>Song was deleted ! </songDelete>
                <noSongDelete>No song was deleted ! </noSongDelete>
            </infoMessage>
        </variable>
        <variable option="frontend">
            <pageTitle>
                <action>
                    <upload>Upload</upload>
                    <list>List all songs</list>
                    <show>Show song details</show>
                </action>
            </pageTitle>
             <infoMessage>
                <songAdd>Song added ! </songAdd>
                <songUpdate>Song updated ! </songUpdate>
                <songDelete>Song was deleted ! </songDelete>
                <noSongDelete>No song was deleted ! </noSongDelete>
            </infoMessage>
            <errorMessage>
                <songError>Your filesize is to big or your file type is not allowed</songError>
                <upload>You didn't meet the requirements!</upload>
                <imageError>Your file size is to big or image type is not allowed!</imageError>

            </errorMessage>
             <validate>
                <title>
                    <lengthMin>3</lengthMin>
                    <lengthMax>255</lengthMax>
                </title>
                <description>
                    <lengthMin>3</lengthMin>
                    <lengthMax>20</lengthMax>
                </description>
                <tags>
                    <lengthMin>3</lengthMin>
                    <lengthMax>150</lengthMax>
                </tags>
            </validate> 
        </variable>
        <variable option="mobile">
            <pageTitle>
                <action>
                    <home>Mobile Version</home>
                </action>
            </pageTitle>
            <contactForm>
                <subject>Mobile Contact Form</subject>
                <message>
From: %EMAIL%
Phone: %PHONE%

%MESSAGE%

---
Date: %DATE%
IP: %IP%
User Agent: %USERAGENT%
                </message>
                <mailSent>Your message was sent!</mailSent>
            </contactForm>
        </variable>         
    </dots>
</config>